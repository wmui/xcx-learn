/* page是最外层容器  */
page {
  height: 100%;
  background-color: #f3f3f3;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 100rpx;
}
.moto-container {
  margin-top: 200rpx;
  border: 1rpx solid #000;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}
